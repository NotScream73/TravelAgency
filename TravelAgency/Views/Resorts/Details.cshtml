@using TravelAgency.Helpers
@model TravelAgency.ViewModels.Resorts.ResortDetailsViewModel

@{
    ViewData["Title"] = "Подробности курорта";
}

<h1>Подробности курорта @Model.Item.Name</h1>

<div>
    <h4>Курорт</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(_ => Model.Item.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(_ => Model.Item.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(_ => Model.Item.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(_ => Model.Item.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(_ => Model.Item.Type)
        </dt>
        <dd class = "col-sm-10">
            @Model.Item.Type.GetDescription()
        </dd>
    </dl>
</div>
<div> 
    <a asp-action="Edit" asp-route-id="@Model.Item.Id">Изменить</a> |
    <a asp-action="Index">Назад</a>
</div>
